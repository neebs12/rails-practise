<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%# so these essentially dictate the schema of the form data created from the form %>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>